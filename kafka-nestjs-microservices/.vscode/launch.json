{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug kafka-nestjs-microservices with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "kafka-nestjs-microservices"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/kafka-nestjs-microservices/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
